<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gambarWayang"
        android:layout_width="124dp"
        android:layout_height="0dp"
        android:src="@drawable/gambar_wayang"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/namaWayang"
        app:layout_constraintBottom_toBottomOf="@id/btnHapus"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/namaWayang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="namaWayang"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/gambarWayang"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/karakterWayang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="karakterWayang"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#1BABA9"
        app:layout_constraintTop_toBottomOf="@id/namaWayang"
        app:layout_constraintEnd_toEndOf="@id/namaWayang"
        app:layout_constraintStart_toStartOf="@id/namaWayang"/>

    <TextView
        android:id="@+id/deskripsiWayang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="deskripsiWayang"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="@id/namaWayang"
        app:layout_constraintTop_toBottomOf="@id/karakterWayang"
        app:layout_constraintStart_toStartOf="@id/karakterWayang"/>

    <Button
        android:id="@+id/btnHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAPUS DATA"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/deskripsiWayang"
        app:layout_constraintEnd_toEndOf="@id/deskripsiWayang"/>

</androidx.constraintlayout.widget.ConstraintLayout>